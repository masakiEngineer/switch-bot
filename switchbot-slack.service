[Unit]
Description=Switchbot Slack Bot
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/switch-bot
Environment="PATH=/home/ubuntu/switch-bot/venv/bin:/usr/bin"
ExecStart=/home/ubuntu/switch-bot/venv/bin/python slack_bot.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
